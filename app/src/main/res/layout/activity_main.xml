<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    tools:context=".MainActivity">


  <EditText
      android:id="@+id/editText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:ems="10"
      android:gravity="right|center"
      android:inputType=""
      android:padding="20dp"
      android:text=""
      android:textSize="20dp"
      tools:ignore="RtlHardcoded,TextSizeCheck,SpeakableTextPresentCheck" />
  <TextView
      android:id="@+id/output"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:gravity="right|bottom"
      android:padding="30dp"
      android:text="Result"
      android:textSize="30dp"


      >

  </TextView>

  <TableLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <!-- Row 1 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/buAC"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="AC"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />

      <Button
          android:id="@+id/buPlusMinus"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="+/-"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />

      <Button
          android:id="@+id/buDivide"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="/"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />

      <Button
          android:id="@+id/buMultiply"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="*"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />
    </TableRow>

    <!-- Row 2 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/bu7"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="7"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />

      <Button
          android:id="@+id/bu8"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="8"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />

      <Button
          android:id="@+id/bu9"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="9"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />

      <Button
          android:id="@+id/buMinus"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="-"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />
    </TableRow>

    <!-- Row 3 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/bu4"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="4"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />

      <Button
          android:id="@+id/bu5"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="5"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />

      <Button
          android:id="@+id/bu6"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="6"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />

      <Button
          android:id="@+id/buPlus"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="+"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />
    </TableRow>

    <!-- Row 4 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/bu1"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="1"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />

      <Button
          android:id="@+id/bu2"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="2"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />

      <Button
          android:id="@+id/bu3"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="3"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />

      <Button
          android:id="@+id/buPercent"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="%"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />
    </TableRow>

    <!-- Row 5 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/bu0"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="3"
          android:background="#000000"
          android:text="0"
          android:textColor="#FFFFFF"
          android:textSize="24sp" />

      <Button
          android:id="@+id/buDot"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="."
          android:textColor="#FFFFFF"
          android:textSize="24sp" />

      <Button
          android:id="@+id/buEqual"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_weight="1"
          android:background="#000000"
          android:text="="
          android:textColor="#FFFFFF"
          android:textSize="24sp" />
    </TableRow>

  </TableLayout>


</LinearLayout>